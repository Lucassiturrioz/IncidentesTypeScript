<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleBtn = document.getElementById('toggle-btn');

        toggleBtn.addEventListener('click', function () {
            const isOpen = toggleBtn.classList.contains('btn-green');
            const rows = document.querySelectorAll('tr[data-resuelto]');
            
            rows.forEach(row => {
                const isResolved = row.getAttribute('data-resuelto') === 'false';
                if ((isOpen && !isResolved) || (!isOpen && isResolved)) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });

            // Toggle button style and text
            toggleBtn.classList.toggle('btn-green');
            toggleBtn.classList.toggle('btn-blue');
            toggleBtn.textContent = isOpen ? 'Incidentes Cerrados' : 'Incidentes Abiertos';
        });
    });
</script>

